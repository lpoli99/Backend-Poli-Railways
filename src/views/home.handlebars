<div>
    <h3>Welcome {{username}}!</h3>
    <br>
    <form action="../auth/logout" method="post">
        <button id="logout">Sign off</button>
    </form>
    <br>
    <h2>Products</h2>
    {{#each products}}
        <div>
            <h3>Title: {{this.title}}</h3>
            <p>Description: {{this.description}}</p>
            <p>Category: {{this.category}}</p>
            <p>Stock: {{this.stock}}</p>
        </div>
        <form action="../api/carts/product/{{this._id}}" method="post">
            <button type="submit">Add to Cart</button>
        </form>
    {{/each}}
    <div>
        {{#if hasPrevPage}}
            <a href="/products?page={{prevPage}}&&limit={{limit}}"><button>Previous</button></a>
        {{/if}}
        <p>{{page}}</p>
        {{#if hasNextPage}}
            <a href="/products?page={{nextPage}}&&limit={{limit}}"><button>Next</button></a>
        {{/if}}
    </div>
</div>

<script src="../public/js/home.js"></script>
